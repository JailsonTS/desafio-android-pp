<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorDetail</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textViewStyle">@style/TextAppearance.TypeOne.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorDetail</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">@android:color/black</item>
        <item name="android:textViewStyle">@style/TextAppearance.TypeOne.Dark</item>
        <item name="android:fillColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.TitleHeader" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TypeOne.Light" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.TypeVariant.Light" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.TypeOne.Dark" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.TypeVariant.Dark" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorDetail</item>
    </style>

</resources>
